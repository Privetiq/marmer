mixin step(cls, bgsrc, imgsrc, number, title, desc)
    .step-line(class=cls)
        .step-block
            .icon-block
                .icon-bg: img(src=bgsrc, alt="")
                .icon-image: img(src=imgsrc, alt="")
            .info-block
                .top-line
                    .number=number
                    .title=title
                .desc=desc

